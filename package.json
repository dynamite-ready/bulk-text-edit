{
  "name": "bulk-text-edit",
  "description": "Tiny Sketch plugin to edit multiple text fields that share the same name, in bulk.",
  "version": "0.5.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dynamite-ready/bulk-text-edit.git"
  },
  "skpm": {
    "name": "bulk-text-edit",
    "manifest": "src/manifest.json",
    "main": "plugin.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  }
}
